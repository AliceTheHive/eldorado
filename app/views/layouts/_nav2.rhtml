    <%= link_to 'Home', home_path %> &raquo; 
    <%= link_to 'Forum', forum_home_path %> <%= link_to 'Topics', topics_path %> &raquo; 
    <%= link_to @topic.forum.category.name, category_path(@topic.forum.category) %> &raquo; 
    <%= link_to @topic.forum.name, forum_path(@topic.forum) %> &raquo; 
    <%=h @topic.title %>
  </div>
  <div class="info-right">
    <% if can_edit?(@topic) %>
      <%= link_to 'Edit Topic', edit_topic_path %>
    <% end %>
    <% if @topic.last_page != 1 && can_edit?(@topic) %><span class="detail">&nbsp;|&nbsp;</span><% end %>
    <%= will_paginate @posts, :inner_window => 1, :outer_window => 0, :prev_label => '&laquo; Prev' %>
  </div>
<% end %>

