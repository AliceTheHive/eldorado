<%= error_messages_for :topic %>
	
<% form_for(:topic, :url => topics_path) do |f| %>
<table cellspacing="0">
	<thead>
		<tr><th>New Topic</th></tr>
	</thead>
	<tbody>
		<tr><td>
			<b><label for="title">Title</label></b><br />
			<%= f.text_field :title, :style => 'width:66%;' %><br /><br />
			<b><label for="body">Body</label></b><br />
			<%= f.text_area :body, :rows => '15', :style => 'width:66%;' %>
			<p><%= submit_tag "Create Topic", :disable_with => "Creating Topic..." %> or <%= link_to 'Cancel', topics_path %></p>
		</td></tr>
	</tbody>
</table>
<% end %>
