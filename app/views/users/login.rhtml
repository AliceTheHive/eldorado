<% form_tag :action => 'login' do %>
	<table cellspacing="0">
		<thead>
			<tr><th>Login</th></tr>
		</thead>
		<tbody>
			<tr><td class="tds">
				<b><label for="title">Username</label></b><br />
				<%= text_field_tag :login, params[:login] %><br /><br />
				<b><label for="password">Password</label></b><br />
				<%= password_field_tag :password %>
				<p><%= submit_tag "Login", :disable_with => "Login" %> or <%= link_to 'Cancel', home_path %></p>
			</td></tr>
		</tbody>
	</table>
<% end %>
	
<%= javascript_tag "login.focus();" %>
