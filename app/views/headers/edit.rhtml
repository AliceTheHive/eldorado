<%= error_messages_for :header %>

<% form_for(:header, :url => header_path(@header), :html => { :method => :put }) do |f| -%>
	<div class="box">
		
		<div class="top">Edit Header</div>
		
		<p class="label"><label for="description">Description</label> (optional)</p>
		<p><%= f.text_area :description, :rows => '4', :style => 'width:66%;' %></p>
			
		<p><%= submit_tag "Edit Header", :disable_with => "Edit Header" %><span> or <%= link_to 'Delete', header_path(@header), :confirm => 'Are you sure?', :method => :delete %> or <%= link_to 'Cancel', headers_path %></p>

	</div>
<% end %>

<%= javascript_tag "header_description.focus();" %>
