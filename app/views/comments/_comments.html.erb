<% @comments = @article.comments(:include => :user) %>
<div class="info-left">
  <div class="title">
    <%= pluralize(@article.comments_count, 'Comment') %>
  </div>
</div>
<div class="clear"> </div>

<div class="comment-body">
  <% @comments.each do |comment| %>
    <div class="comment" id="c<%= comment.id %>">
      <span class="comment-user"><%= link_to comment.user, comment.user %></span> <%= comment.body %>
    </div>
  <% end unless @comments.empty? %>
</div>
