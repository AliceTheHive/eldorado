<div class="nav nav-stats">
  <p class="nav-left">
    <% unless @user_online.blank? %>
      Recent Visitors: <%= @user_online.map { |u| link_to "#{h u.login}", u } * ", " %>
    <% end %>
  </p>
  <p class="nav-right">
    <% unless @user_newest.blank? %>
      Newest User: <%= link_to h(@user_newest.login), @user_newest %>
    <% end %>
  </p>
</div>