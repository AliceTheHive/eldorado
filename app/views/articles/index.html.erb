<div class="primary">
  <% for article in @articles %>
    <div class="info-left">
      <div class="title article-title">
        <%= link_to h(article.title), article %>
      </div>
      <div class="detail">
        <%= time_ago_or_time_stamp(article.created_at) %> by 
        <%= link_to h(article.user), article.user %>
        <% if can_edit?(article) %>
          &nbsp;|&nbsp; <%= link_to 'Edit', edit_article_path(article) %>
        <% end %>
      </div>
    </div>
    <div style="clear:both;"> </div>
    <div class="article-body">
      <%=bb article.body %>
    </div>
  <% end %>
</div>
<div class="secondary articles-secondary">
  <%= render :partial => 'articles/secondary'%>
</div>