<% @bloggers = User.bloggers %>
<% if @bloggers %>
  <div class="title"><%= link_to 'Contributors', users_path %></div>
  <ul class="secondary-list">
    <% @bloggers.each do |user| %>
      <li><%= link_to user, articles_user_path(user) %> <span class="detail">(<%= user.articles_count %>)</span></li>
    <% end %>
  </ul>
<% end %>

<% if @articles %>
  <div class="title"><%= link_to 'Recent Articles', blog_path %></div>
  <ul class="secondary-list">
    <% @articles.each do |article| %>
      <li><%= link_to article, article %> <span class="detail">by <%= article.user %></span></li>
    <% end %>
  </ul>
<% end %>